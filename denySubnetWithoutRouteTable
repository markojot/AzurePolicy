{
  "name": "Append_RT_To_Subnets",
  "type": "Microsoft.Authorization/policyDefinitions",
  "apiVersion": "2021-06-01",
  "properties": {
    "displayName": "Modify RT to Subnets if None is Attached",
    "policyType": "Custom",
    "mode": "All",
    "description": "This policy automatically modifies subnets by appending the default route table if no route table is attached. It extracts the designation and environment from the subnet name (assumed to be in the format snet-<function>-<designation>-<environment>-<region>) and builds the default route table resource ID. If a route table is already attached, the policy does nothing.",
    "metadata": {
      "version": "1.0.0",
      "category": "Network"
    },
    "parameters": {
      "effect": {
        "type": "String",
        "defaultValue": "Audit",
        "allowedValues": [
          "Modify",
          "Deny",
          "Audit",
          "Disabled"
        ],
        "metadata": {
          "displayName": "Effect",
          "description": "The effect to enforce (Modify, Deny, Audit, or Disabled). For remediation tasks, override to Modify as needed."
        }
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Network/virtualNetworks/subnets"
          },
          {
            "exists": "false",
            "field": "Microsoft.Network/virtualNetworks/subnets/routeTable.id"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          "operations": [
            {
              "operation": "addOrReplace",
              "field": "Microsoft.Network/virtualNetworks/subnets/routeTable.id",
              "value": "[concat(subscription().id, '/resourceGroups/', resourceGroup().name, '/providers/Microsoft.Network/routeTables/rt-default-', split(field('name'),'-')[2], '-', split(field('name'),'-')[3], '-', resourceGroup().location)]"
            }
          ]
        }
      }
    }
  }
}